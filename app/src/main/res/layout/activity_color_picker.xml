<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ColorPicker">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="411dp"
        android:layout_height="60dp"
        android:background="#2E2E2E"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="Color Picker"
        android:textColor="#E3E3E3"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2E2E2E"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/RedBright"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#f11212"
                app:cardCornerRadius="7dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/Red"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#c81313"
                app:cardCornerRadius="7dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/RedDark"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#9b0f0f"
                app:cardCornerRadius="7dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2E2E2E"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/OrangeBright"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#f18212"
                app:cardCornerRadius="7dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/Orange"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#c86e13"
                app:cardCornerRadius="7dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/OrangeDark"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#9b550f"
                app:cardCornerRadius="7dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2E2E2E"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/YellowBright"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#f1f112"
                app:cardCornerRadius="7dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/Yellow"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#c8c813"
                app:cardCornerRadius="7dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/YellowDark"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#9b9b0f"
                app:cardCornerRadius="7dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2E2E2E"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/GreenBright"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#82f112"
                app:cardCornerRadius="7dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/Green"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#6ec813"
                app:cardCornerRadius="7dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/GreenDark"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#559b0f"
                app:cardCornerRadius="7dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="7dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2E2E2E"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#ff1313"
                app:cardCornerRadius="7dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#d51212"
                app:cardCornerRadius="7dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#ab0f0f"
                app:cardCornerRadius="7dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="7dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2E2E2E"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#ff1313"
                app:cardCornerRadius="7dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#d51212"
                app:cardCornerRadius="7dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="#ab0f0f"
                app:cardCornerRadius="7dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>