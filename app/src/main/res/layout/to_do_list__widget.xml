<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appWidgetBackgroundColor"
    android:padding="@dimen/widget_margin"
    android:backgroundTint="#2E2E2E"
    android:theme="@style/ThemeOverlay.ToDoList.AppWidgetContainer">

    <Button
        android:id="@+id/TodayButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="#E3E3E3"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/TomorrowButton"
        android:layout_toEndOf="@+id/YesterdayButton"
        android:backgroundTint="#2E2E2E"
        android:text="Today" />

    <Button
        android:id="@+id/TomorrowButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="#E3E3E3"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="#2E2E2E"
        android:text="Tomorrow" />

    <Button
        android:id="@+id/YesterdayButton"
        android:textColor="#E3E3E3"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#2E2E2E"
        android:text="Yesterday" />

    <ListView
        android:id="@+id/TodayList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/TodayButton"
        android:layout_marginTop="0dp" />
</RelativeLayout>